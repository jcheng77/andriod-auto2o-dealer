<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:centerColor="@color/light_gray" android:centerX="0.5" android:centerY="0.5" android:endColor="@color/light_gray" android:startColor="@color/light_gray" />

            <stroke android:width="1dp" android:color="@color/actionbar_main" />

            <corners android:radius="1dp" />

            <padding android:bottom="6dp" android:left="10dp" android:right="10dp" android:top="6dp" />
        </shape>
        
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:angle="270" android:centerColor="@color/light_gray" android:centerX="0.5" android:centerY="0.5" android:endColor="@color/light_gray" android:startColor="@color/light_gray" />

            <stroke android:width="1dp" android:color="@color/actionbar_main" />

            <corners android:radius="1dp" />

            <padding android:bottom="6dp" android:left="10dp" android:right="10dp" android:top="6dp" />
        </shape>
        
     </item>
    <item>
        <shape>
            <gradient android:angle="270" android:centerColor="@color/light_gray" android:centerX="0.5" android:centerY="0.5" android:endColor="@color/light_gray" android:startColor="@color/light_gray" />

            <stroke android:width="1dp" android:color="@color/white" />

            <corners android:radius="1dp" />

            <padding android:bottom="6dp" android:left="10dp" android:right="10dp" android:top="6dp" />
        </shape>
    </item>

</selector>