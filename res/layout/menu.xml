<com.jeremyfeinstein.slidingmenu.lib.SlidingMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sliding="http://schemas.android.com/apk/res-auto"
    android:id="@+id/slidingmenulayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/slidingmenu"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/slidingmenu_row_height"
            android:gravity="center_vertical" >

            <ImageView 
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/car_icon"
                />


            <LinearLayout
                android:id="@+id/selectCityLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/menuCurrentCityTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/slidingmenu_text"
                    android:text="Shanghai"
                    android:textSize="20sp" />

                <ImageView 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_expand"
                    android:padding="5dp"
                    />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ffffff" />

        <LinearLayout
            android:id="@+id/welcome_linearLayout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/slidingmenu_row_height"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="5dp"
                android:src="@drawable/ic_action_mycar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/slidingmenu_text"
                android:padding="10dp"
                android:text="首页"
                android:textSize="20sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ffffff" />


        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ffffff" />
        
        <LinearLayout
            android:id="@+id/settingLinearlayout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/slidingmenu_row_height"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="5dp"
                android:src="@drawable/ic_action_settings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/slidingmenu_text"
                android:padding="10dp"
                android:text="设置"
                android:textSize="20sp" />
        </LinearLayout>
        
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ffffff" />
        
    </LinearLayout>

</com.jeremyfeinstein.slidingmenu.lib.SlidingMenu>