<com.jeremyfeinstein.slidingmenu.lib.SlidingMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sliding="http://schemas.android.com/apk/res-auto"
    android:id="@+id/slidingmenulayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/slidingmenu"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/pailixing_logo" />

                <!--
                     <TextView
                    android:textStyle="bold|italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="拍立行"
                    android:textSize="@dimen/text_size_extra_large"
                    android:textColor="@color/white" />
                -->
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/selectCityLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/menuCurrentCityTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上海"
                    android:textColor="@color/slidingmenu_text"
                    android:textSize="@dimen/text_size_middle" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/ic_action_expand" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ffffff" />

        <!--
        <LinearLayout
            android:id="@+id/welcome_linearLayout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/slidingmenu_row_height"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="5dp"
                android:src="@drawable/ic_action_settings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/slidingmenu_text"
                android:padding="10dp"
                android:text="首页"
                android:textSize="20sp" />
        </LinearLayout>
        -->

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ffffff" />

        <LinearLayout
            android:id="@+id/welcome_linearLayout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/slidingmenu_row_height"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/slidingmenu_row_height"
                android:layout_height="@dimen/slidingmenu_row_height"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_action_mycar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="首页"
                android:textColor="@color/slidingmenu_text"
                android:textSize="@dimen/text_size_middle" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ffffff" />
        <LinearLayout
            android:id="@+id/couponLinearlayout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/slidingmenu_row_height"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="23dp"
                android:src="@drawable/ic_action_guide" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="优惠券"
                android:textColor="@color/slidingmenu_text"
                android:textSize="@dimen/text_size_middle" />
        </LinearLayout>



        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ffffff" />

        <LinearLayout
            android:id="@+id/settingLinearlayout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/slidingmenu_row_height"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/slidingmenu_row_height"
                android:layout_height="@dimen/slidingmenu_row_height"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_action_settings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="设置"
                android:textColor="@color/slidingmenu_text"
                android:textSize="@dimen/text_size_middle" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ffffff" />
    </LinearLayout>

</com.jeremyfeinstein.slidingmenu.lib.SlidingMenu>