<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:listViewAttr="http://schemas.android.com/apk/res/com.cettco.buycar.dealer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <include
        android:id="@+id/activity_orders_actionbar"
        layout="@layout/actionbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_orders_actionbar"
        android:orientation="vertical" >

        <cn.trinea.android.common.view.DropDownListView
            android:id="@+id/orders_drop_down_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="false"
            listViewAttr:isAutoLoadOnBottom="false"
            listViewAttr:isDropDownStyle="true"
            listViewAttr:isOnBottomStyle="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/orders_bg_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mycar_bg" />
    </LinearLayout>

</RelativeLayout>